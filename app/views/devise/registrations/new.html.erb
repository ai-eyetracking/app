<%# app/views/devise/registrations/new.html.erb %>
<div class="flex min-h-full flex-col justify-center py-16 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <!-- Simple logo with eye icon -->
    <div class="mx-auto h-10 w-10 text-gray-800">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" 
          d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
      </svg>
    </div>
    <h2 class="mt-6 text-center text-2xl font-medium text-gray-900">Create your account</h2>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-[400px]">
    <div class="bg-white px-6 py-10 sm:rounded-xl">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class:"space-y-5"}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource if defined?(resource) && resource.errors.any? %>
        
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                class: "block w-full rounded-lg bg-gray-50 border-none px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-gray-200 placeholder:text-gray-400 focus:ring-2 focus:ring-gray-900 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <% if @minimum_password_length %>
            <span class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</span>
          <% end %>
          <div class="mt-1">
            <%= f.password_field :password, autocomplete: "new-password", 
                class: "block w-full rounded-lg bg-gray-50 border-none px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-gray-200 placeholder:text-gray-400 focus:ring-2 focus:ring-gray-900 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                class: "block w-full rounded-lg bg-gray-50 border-none px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-gray-200 placeholder:text-gray-400 focus:ring-2 focus:ring-gray-900 sm:text-sm" %>
          </div>
        </div>

        <div class="pt-2">
          <%= f.submit "Create account", class: "flex w-full justify-center rounded-lg bg-gray-900 px-3.5 py-2.5 text-sm font-medium text-white shadow-sm hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2" %>
        </div>
      <% end %>
    </div>

    <p class="mt-6 text-center text-sm text-gray-500">
      Already have an account?
      <%= link_to "Sign in", new_session_path(resource_name), class: "font-medium text-gray-900 hover:underline" %>
    </p>
  </div>
</div>
